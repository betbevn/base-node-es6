{
  "name": "node-training-es6",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:dev": "npm run dev",
    "start:docker": "npm run docker",
    "build": "npm-run-all clean transpile",
    "server": "node ./build/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "docker": "NODE_ENV=docker npm-run-all build server",
    "//transpile": "babel ./server --out-dir build",
    "transpile": "gulp",
    "clean": "rimraf build",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "cookie-parser": "~1.4.4",
    "crypto": "^1.0.1",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.8.0",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "nodemon": "^2.0.20"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
